#include <iostream>

using namespace std;

int main()
{
    //defined mass
    double mass;

    // mass shows
    cout<<"enter your mass"<<endl;
    cin>>mass;

    //convert mass to weight
    cout<< mass * 9.8 <<endl;

    // If the mass is over 1000 the weight is  too heavy
    if (mass * 9.8 > 1000){

        cout<<"\n"<< mass * 9.8 <<" Newtons"<<"\nThat's way to heavy"<<endl;
    }

    // weight under 10 newtons to be light
    else if ( mass * 9.8 < 10){

        cout<<"\n"<< mass * 9.8 <<" Newtons"<<"\nThat's light."<<endl;
    }

    //weight between 10 nnd 1000 is good for earth
     else if (10 > mass * 9.8 < 1000)
        cout<<"\n"<< mass * 9.8 <<" Newtons"<<"\npretty snazzy for earth"<<endl;

    return 0;
}

